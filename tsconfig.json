{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports" : true,
    "strictNullChecks": false,
    "removeComments": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}